<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.addStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.searchStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.viewAllStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteSevlet</servlet-name>
        <servlet-class>za.ac.tut.web.deleteSevlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>numstudentSerlet</servlet-name>
        <servlet-class>za.ac.tut.web.numstudentSerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addStudentServlet</servlet-name>
        <url-pattern>/addStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchStudentServlet</servlet-name>
        <url-pattern>/searchStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllStudentServlet</servlet-name>
        <url-pattern>/viewAllStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteSevlet</servlet-name>
        <url-pattern>/deleteSevlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>numstudentSerlet</servlet-name>
        <url-pattern>/numstudentSerlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
